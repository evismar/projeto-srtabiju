# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~



# Home page
GET     /                                       Application.index
GET     /cadastro/cliente                       ContCliente.cadCliente
POST    /cadastro/cliente                       ContCliente.salvarCadastro
GET     /cadastro/produto                       ContProduto.cadProduto
POST    /cadastro/produto                       ContProduto.salvarCadastro


# Adminstration


*       /admin                                  module:crud

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
